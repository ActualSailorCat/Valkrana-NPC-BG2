        RealSetGlobalTimer("vvVALKUrchinTimer","LOCALS",900)
        CreateCreature("vvURCH01",[-1.-1],S)
    RESPONSE #25
        RealSetGlobalTimer("vvVALKUrchinTimer","LOCALS",900)
        CreateCreature("vvURCH01",[-1.-1],E)
    RESPONSE #25
        RealSetGlobalTimer("vvVALKUrchinTimer","LOCALS",900)
        CreateCreature("vvURCH01",[-1.-1],W)
END

