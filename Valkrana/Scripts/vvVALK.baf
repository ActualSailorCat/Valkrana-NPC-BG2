IF
    InParty(Myself)
    Global("BribedCowled","GLOBAL",1)
    Global("vvVALKCowledtowed","GLOBAL",0)
THEN RESPONSE #100
    SetGlobal("vvVALKCowledtowed","GLOBAL",1)
    IncrementGlobal("vvVALKItemFlags","GLOBAL",-3)
END

