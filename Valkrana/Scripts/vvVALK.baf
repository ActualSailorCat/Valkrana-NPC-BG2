    RealGlobalTimerExpired("vvVALKUrchinTimer","LOCALS") 
    See(Player1)
    AreaType(CITY)
    !AreaType(DUNGEON)
    CombatCounter(0)
    !See([ENEMY])
    !StateCheck("vvVALK",CD_STATE_NOTVALID)
THEN 
    RESPONSE #25
        RealSetGlobalTimer("vvVALKUrchinTimer","LOCALS",900)
        CreateCreature("vvURCH01",[-1.-1],N)
