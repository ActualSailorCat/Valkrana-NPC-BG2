//////////////////////////////////////////////
// XP allocation upon first joining party.
//////////////////////////////////////////////
// Level 31
IF
    Global("VV_JOINXP","LOCALS",0)
    InParty(Myself)
    XPGT(Player1,7874999)
    XPLT(Myself,7875000)
THEN
    RESPONSE #100
        SetInterrupt(FALSE)
        SetGlobal("VV_JOINXP","LOCALS",1)
        ChangeStat(Myself,XP,7875000,SET)
        SetInterrupt(TRUE)
END

